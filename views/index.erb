<h2>All Anime</h2>

<% anime_list = DB.execute("SELECT * FROM Anime") %>

<% if anime_list.empty? %>
  <p>No anime found in the database.</p>
<% else %>
  <table>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Airing</th>
      <th>Actions</th>
    </tr>
    <% anime_list.each do |anime| %>
      <tr>
        <td><%= anime['id'] %></td>
        <td><%= anime['name'] %></td>
        <td><%= anime['airing'] == 1 ? 'Yes' : 'No' %></td>
        <td>
          <a href="/anime/<%= anime['id'] %>" class="btn">View</a>
          <a href="/anime/<%= anime['id'] %>/edit" class="btn btn-edit">Edit</a>
          <form action="/api/anime/<%= anime['id'] %>" method="post" style="display:inline" onsubmit="return confirmDelete()">
            <input type="hidden" name="_method" value="delete">
            <input type="submit" value="Delete" class="btn btn-delete" style="border:none">
          </form>
        </td>
      </tr>
    <% end %>
  </table>
  
  <script>
    function confirmDelete() {
      return confirm("Are you sure you want to delete this anime?");
    }
  </script>
<% end %>